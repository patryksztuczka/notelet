{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "composite": true,
    "strict": true,
    "tsBuildInfoFile": "./dist/tsconfig.main.tsbuildinfo"
  },
  "paths": {
    "@/*": ["./*"],
    "@main/*": ["./src/main/*"],
    "@renderer/*": ["./src/renderer/*"]
  },
  "references": [{"path": "./src/renderer"}],
  "exclude": ["node_modules"]
}
